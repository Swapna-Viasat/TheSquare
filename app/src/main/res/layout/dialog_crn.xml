<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
        android:text="@string/create_job_crn"
        android:textSize="22sp"
        app:josefin_style="italic"
        android:layout_gravity="center"
        android:textColor="@color/blackSquareColor"
        android:layout_margin="12dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
        android:id="@+id/dialog_crn_input"
        android:layout_margin="12dp"
        android:inputType="number"
        android:maxLength="9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
        android:id="@+id/dialog_crn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/redSquareColor"
        android:textColor="@color/whiteSquareColor"
        android:text="Proceed"
        android:layout_margin="12dp"
        android:padding="12dp"
        android:textSize="18sp"
        app:josefin_style="italic"
        android:gravity="center"/>
</LinearLayout>