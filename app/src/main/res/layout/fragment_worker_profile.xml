<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/content_worker_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/redSquareColor"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/worker_view_profile_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_no_avatar"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_view_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    app:josefin_style="light" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                        android:id="@+id/worker_view_profile_position"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingTop="6dp"
                        android:textAllCaps="true"
                        android:textColor="@color/blackSquareColor"
                        android:textSize="18sp"
                        app:josefin_style="italic"
                        tools:text="ADMINISTRATOR" />

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                        android:id="@+id/worker_view_profile_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:paddingLeft="5dp"
                        android:paddingTop="6dp"
                        android:textAllCaps="true"
                        android:textColor="@color/blackSquareColor"
                        android:textSize="18sp"
                        app:josefin_style="italic"
                        tools:text="/ 15 YEARS EXPERIENCE" />
                </LinearLayout>

                <com.hellobaytree.graftrs.shared.view.widget.RatingView
                    android:id="@+id/worker_view_profile_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    app:editable="no" />
            </LinearLayout>

            <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                android:textColor="@color/redSquareColor"
                android:text="BOOK"
                android:id="@+id/book"
                android:visibility="gone"
                android:background="@android:color/white"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_gravity="bottom|end|right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/content_worker_details_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_bio_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="@string/employer_worker_details_bio"
                    android:textColor="@color/blackSquareColor" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_bio_text"
                    style="@style/caption_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_bio_title"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_experience_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/employer_worker_details_qualifications"
                    android:textColor="@color/blackSquareColor" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_details_bullet_list_experience"
                    style="@style/caption_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_experience_title"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <include layout="@layout/cscs_worker" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_requirements_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/employer_worker_details_requirements"
                    android:textColor="@color/blackSquareColor" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_details_bullet_list_requirements"
                    style="@style/caption_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_requirements_title"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_skills_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/employer_worker_details_skills"
                    android:textColor="@color/blackSquareColor" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_details_bullet_list_skills"
                    style="@style/caption_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_skills_title"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_companies_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/employer_worker_details_companies"
                    android:textColor="@color/blackSquareColor" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_details_bullet_list_companies"
                    style="@style/caption_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_companies_title"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@android:color/darker_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:orientation="vertical">

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_profile_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/employer_worker_details_location"
                    android:textColor="@color/blackSquareColor" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:id="@+id/worker_details_preferred_location"
                    style="@style/caption_gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/worker_profile_location_title"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="240dp" />
    </LinearLayout>
</ScrollView>