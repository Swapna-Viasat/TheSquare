<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:gravity="center"
            android:orientation="vertical">

            <construction.thesquare.shared.view.widget.JosefinSansTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How can we help?"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textSize="24dp"
                app:josefin_style="light" />
            <construction.thesquare.shared.view.widget.JosefinSansEditText
                android:background="@drawable/apptheme_edit_text_search"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/blackSquareColor"
                android:textAlignment="center"
                android:gravity="center"
                android:id="@+id/search_input"
                app:josefin_style="italic"
                android:hint="Search for anything... (price plans,bookings etc)"
                android:layout_height="30dp" />
            <Button
                android:id="@id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Search"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/recent_faq_section"
                android:orientation="vertical">
                <construction.thesquare.shared.view.widget.JosefinSansTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frequently asked questions"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:textAlignment="center"
                     android:layout_gravity="center"
                    android:textSize="24dp"
                    app:josefin_style="light" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/worker_top_search_rv"
                    android:layout_width="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_height="match_parent"/>
            </LinearLayout>



        </LinearLayout>

</LinearLayout>