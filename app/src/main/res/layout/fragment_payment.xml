<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.hellobaytree.graftrs.employer.payments.fragment.PaymentFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
            android:text="@string/create_job_card"
            android:textColor="@color/redSquareColor"
            android:textSize="18sp"
            android:layout_margin="12dp"
            app:josefin_style="italic"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Name -->
        <android.support.v7.widget.CardView
            app:cardElevation="6dp"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                        android:text="@string/create_job_first"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                        android:inputType="text|textNoSuggestions|textCapWords"
                        android:layout_margin="12dp"
                        android:id="@+id/first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                        android:text="@string/create_job_last"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                        android:inputType="text|textNoSuggestions|textCapWords"
                        android:layout_margin="12dp"
                        android:id="@+id/last"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Card Data -->
        <android.support.v7.widget.CardView
            app:cardElevation="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:text="@string/create_job_card_number"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                    android:inputType="number"
                    android:layout_margin="12dp"
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                            android:text="@string/create_job_expiration"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:weightSum="2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                                android:inputType="number"
                                android:maxLength="2"
                                android:layout_margin="12dp"
                                android:id="@+id/month"
                                android:hint="month"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                                android:inputType="number"
                                android:maxLength="4"
                                android:layout_marginLeft="6dp"
                                android:layout_margin="12dp"
                                android:id="@+id/year"
                                android:hint="year"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                            android:text="@string/create_job_cvc"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                            android:inputType="number"
                            android:maxLength="3"
                            android:layout_margin="12dp"
                            android:id="@+id/cvc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Voucher -->
        <android.support.v7.widget.CardView
            app:cardElevation="6dp"
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                    android:text="@string/payments_voucher"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                    android:inputType="text|textNoSuggestions|textCapWords"
                    android:layout_margin="12dp"
                    android:id="@+id/voucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Address -->
        <android.support.v7.widget.CardView
            app:cardElevation="6dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                        android:text="@string/payments_address1"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                        android:inputType="text|textNoSuggestions|textCapWords"
                        android:layout_margin="12dp"
                        android:id="@+id/address1"
                        android:hint="@string/payments_address2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                        android:inputType="text|textNoSuggestions|textCapWords"
                        android:layout_margin="12dp"
                        android:id="@+id/city"
                        android:hint="@string/payments_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                        android:inputType="text|textNoSuggestions|textCapWords"
                        android:layout_margin="12dp"
                        android:id="@+id/country"
                        android:hint="@string/payments_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
                        android:text="@string/payments_postcode"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.hellobaytree.graftrs.shared.view.widget.JosefinSansEditText
                        android:inputType="text|textNoSuggestions|textCapWords"
                        android:layout_margin="12dp"
                        android:id="@+id/postcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <!-- Action -->
        <com.hellobaytree.graftrs.shared.view.widget.JosefinSansTextView
            android:text="@string/create_job_confirm"
            android:id="@+id/confirm"
            android:textColor="@color/whiteSquareColor"
            android:background="@color/redSquareColor"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:layout_margin="12dp"
            android:padding="14dp"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>